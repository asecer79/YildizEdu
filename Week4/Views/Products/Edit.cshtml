@model Product

<form action="/Products/Edit" method="post">


    <div style="width:500px">
        
        <input type="hidden" value="@Model.Id" name="Id"/>

        <div class="mb-3">
            <input type="text" class="form-control form-control-sm" placeholder="Name" name="Name" value="@Model.Name">
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control form-control-sm" placeholder="Price" name="Price" value="@Model.Price">
            <span class="text-danger">@Html.ValidationMessage("Price")</span>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control form-control-sm" placeholder="Category" name="Category" value="@Model.Category">
            <span class="text-danger">@Html.ValidationMessage("Category")</span>
        </div>

        <div class="mb-3">
            <input type="submit" class="btn btn-success float-end" value="Save">
        </div>
    </div>

</form>